<% include ../header %>
	<h1>News</h1>
	<div class="row my-3">
		<% for (var i = 0; i < posts.length; i++) { %>
			<div class="col-md-4 mb-3">
				<div class="card">
					<div class="card-header">
						<h2>
							<a href="/news/<%= i %>"><%= posts[i].title %></a>
						</h2>
					</div>
					<div class="card-body">
						<h4 class="text-info mb-3"><%= posts[i].body %></h4>
						
						<form class="form-inline" action="/news/<%= i %>?_method=delete" method="post">
							<a class="btn btn-primary mr-3" href="/news/<%= i %>/edit">Edit</a>
							<button type="submit" class="btn btn-danger">Delete</button>
							<input type="hidden" name="id" value="<%= i %>">
							<input type="hidden" name="_csrf" value="<%= csrfToken %>">
						</form>
					</div>
				</div>
			</div>
		<% } %>
	</div>
	<p><a class="btn btn-success" href="/news/new">Add new</a></p>
<% include ../footer %>