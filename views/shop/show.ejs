<% include ../header %>
	<div class="card">
		<div class="card-header">
			<h2><span class="text-primary"><%= product.title %></span><small class="float-right"><%= product.category %></small></h2>
		</div>
		<div class="card-body">
			<img class="card-img-top" src="<%= product.img %>" alt="" style="max-width: 600px;">
			<p><%= product.body %></p>
		</div>
	</div>
	<p><a class="float-right mt-3 btn btn-primary" href="/shop">Back</a></p>
<% include ../footer %>